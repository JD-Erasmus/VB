@model VB.Models.Vault
@{
    ViewData["Title"] = "Delete vault";
}

<div class="form-page">
    <div class="section-heading">
        <h1 class="section-heading-title text-danger">
            <i class="bi bi-trash3 me-2"></i>
            Delete vault entry
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i>
            Back to vaults
        </a>
    </div>
    <div class="form-card">
        <div class="alert alert-warning" role="alert">
            This action permanently removes the credential and invalidates any active share links. Make sure your team has rotated the password before continuing.
        </div>
        <div class="stacked-list mb-4">
            <div class="stacked-list-item">
                <span class="stacked-list-label">Website</span>
                <span class="stacked-list-value">@Model?.WebsiteName</span>
            </div>
            <div class="stacked-list-item">
                <span class="stacked-list-label">Username</span>
                <span class="stacked-list-value">@Model?.Username</span>
            </div>
            <div class="stacked-list-item">
                <span class="stacked-list-label">Email</span>
                <span class="stacked-list-value">@Model?.Email</span>
            </div>
        </div>
        <form asp-action="Delete" class="form-footer">
            <input type="hidden" asp-for="Id" />
            <div class="text-muted small">Deleted vaults cannot be restored.</div>
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-outline-danger">Delete vault</button>
            </div>
        </form>
    </div>
</div>