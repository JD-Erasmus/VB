@model VB.Models.Vault
@{
    ViewData["Title"] = "Vault details";
}

<div class="form-page">
    <div class="section-heading">
        <h1 class="section-heading-title">
            <i class="bi bi-card-text me-2"></i>
            Vault details
        </h1>
        <div class="d-flex flex-wrap gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i>
                Back to vaults
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i>
                Edit entry
            </a>
        </div>
    </div>
    <div class="form-card">
        <div class="stacked-list">
            <div class="stacked-list-item">
                <span class="stacked-list-label">Website</span>
                <span class="stacked-list-value">@Model?.WebsiteName</span>
            </div>
            <div class="stacked-list-item">
                <span class="stacked-list-label">URL</span>
                <span class="stacked-list-value">
                    @if (!string.IsNullOrWhiteSpace(Model?.Url))
                    {
                        <a href="@Model.Url" target="_blank" rel="noopener noreferrer" class="text-decoration-none">
                            @Model.Url
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">None provided</span>
                    }
                </span>
            </div>
            <div class="stacked-list-item">
                <span class="stacked-list-label">Username</span>
                <span class="stacked-list-value">@Model?.Username</span>
            </div>
            <div class="stacked-list-item">
                <span class="stacked-list-label">Email</span>
                <span class="stacked-list-value">@Model?.Email</span>
            </div>
            <div class="stacked-list-item">
                <span class="stacked-list-label">Password</span>
                <span class="stacked-list-value">@Model?.Password</span>
            </div>
        </div>
        <div class="alert alert-info mt-4" role="alert">
            Rotate passwords regularly and refresh active share links to keep collaborators in sync.
        </div>
    </div>
</div>