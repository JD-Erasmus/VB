@page
@model RegisterModel
@{
    ViewData["Title"] = "Create your account";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-card-header">
            <span class="auth-eyebrow">Join VaultBridge</span>
            <h1>@ViewData["Title"]</h1>
            <p>Set up your credentials to unlock secure vault sharing.</p>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate class="auth-form">
            <div asp-validation-summary="ModelOnly" class="auth-validation text-danger" role="alert"></div>

            <div class="auth-form-group">
                <label asp-for="Input.Email" class="form-label">Email address</label>
                <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="auth-field-validation"></span>
            </div>

            <div class="auth-form-group">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="Create a password" />
                <span asp-validation-for="Input.Password" class="auth-field-validation"></span>
            </div>

            <div class="auth-form-group">
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="Repeat your password" />
                <span asp-validation-for="Input.ConfirmPassword" class="auth-field-validation"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100">
                Create account
            </button>
        </form>

        <div class="auth-secondary">
            <span>Already have an account?</span>
            <a class="auth-link" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log in</a>
        </div>

        <div class="auth-divider">
            <span>Or sign up with</span>
        </div>

        <section class="auth-alt">
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div class="auth-message">
                        External authentication providers are not configured.
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="auth-alt-grid">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">
                                Continue with @provider.DisplayName
                            </button>
                        }
                    </form>
                }
            }
        </section>
    </div>

    <p class="auth-page-note">By creating an account, you agree to our terms and privacy policy.</p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
