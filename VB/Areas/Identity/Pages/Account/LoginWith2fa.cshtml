@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-card-header">
            <span class="auth-eyebrow">Security check</span>
            <h1>@ViewData["Title"]</h1>
            <p>Your login is protected with an authenticator app. Enter your code to continue.</p>
        </div>

        <form method="post" asp-route-returnUrl="@Model.ReturnUrl" class="auth-form">
            <input asp-for="RememberMe" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="auth-validation text-danger" role="alert"></div>

            <div class="auth-form-group">
                <label asp-for="Input.TwoFactorCode" class="form-label">Authenticator code</label>
                <input asp-for="Input.TwoFactorCode" class="form-control form-control-lg" autocomplete="one-time-code" placeholder="Enter 6-digit code" />
                <span asp-validation-for="Input.TwoFactorCode" class="auth-field-validation"></span>
            </div>

            <div class="auth-form-meta">
                <div class="form-check m-0">
                    <input asp-for="Input.RememberMachine" class="form-check-input" id="rememberMachine" />
                    <label class="form-check-label" for="rememberMachine">
                        @Html.DisplayNameFor(m => m.Input.RememberMachine)
                    </label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100">
                Log in
            </button>
        </form>

        <div class="auth-secondary">
            <span>Unable to access your device?</span>
            <a class="auth-link" id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">Log in with a recovery code</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
